<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductModifyController</servlet-name>
        <servlet-class>controller.ProductModifyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductModifyController</servlet-name>
        <url-pattern>/modify-product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductInsertController</servlet-name>
        <servlet-class>controller.ProductInsertController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductInsertController</servlet-name>
        <url-pattern>/insert-product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PurchaseController</servlet-name>
        <servlet-class>controller.PurchaseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseController</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SaleController</servlet-name>
        <servlet-class>controller.SaleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaleController</servlet-name>
        <url-pattern>/sale</url-pattern>
    </servlet-mapping>
</web-app>
